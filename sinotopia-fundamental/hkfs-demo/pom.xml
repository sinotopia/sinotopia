<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.hakim.demo</groupId>
    <artifactId>demo-parent</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>${project.artifactId}</name>

    <modules>
        <module>demo-web</module>
        <module>demo-jobs</module>
        <module>demo-business</module>
        <module>demo-codegenerator</module>
    </modules>

    <properties>
        <hkfs.fundamental.version>1.1-SNAPSHOT</hkfs.fundamental.version>
        <java.version>1.8</java.version>
    </properties>

    <profiles>
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <config.env>dev</config.env>
            </properties>
        </profile>
        <profile>
            <id>prod</id>
            <properties>
                <config.env>prod</config.env>
            </properties>
        </profile>
    </profiles>

    <build>
        <!--开发环境可使用config_dev文件夹下的配置文件，线上环境从外部加载配置，打包之后不包含配置文件（如果有需要也可以包含）-->
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>config/*/*.properties</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src/main/resources/config/${config.env}</directory>
                <includes>
                    <include>*.properties</include>
                </includes>
                <targetPath>config</targetPath>
            </resource>
        </resources>

        <plugins>
            <!-- resources插件 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencyManagement>
        <dependencies>
            <!--全局相关参数及结果对象-->
            <dependency>
                <groupId>com.hkfs</groupId>
                <artifactId>hkfs-fundamental-api</artifactId>
                <version>${hkfs.fundamental.version}</version>
            </dependency>
            <!--通用工具类-->
            <dependency>
                <groupId>com.hkfs</groupId>
                <artifactId>hkfs-fundamental-common-tools</artifactId>
                <version>${hkfs.fundamental.version}</version>
            </dependency>
            <!--全局配置加载-->
            <dependency>
                <groupId>com.hkfs</groupId>
                <artifactId>hkfs-fundamental-config</artifactId>
                <version>${hkfs.fundamental.version}</version>
            </dependency>
            <!--MySql数据库-->
            <dependency>
                <groupId>com.hkfs</groupId>
                <artifactId>hkfs-fundamental-database</artifactId>
                <version>${hkfs.fundamental.version}</version>
            </dependency>
            <!--参数验证-->
            <dependency>
                <groupId>com.hkfs</groupId>
                <artifactId>hkfs-fundamental-validate</artifactId>
                <version>${hkfs.fundamental.version}</version>
            </dependency>
            <!--异常切面-->
            <dependency>
                <groupId>com.hkfs</groupId>
                <artifactId>hkfs-fundamental-exception-aspect</artifactId>
                <version>${hkfs.fundamental.version}</version>
            </dependency>
            <!--redis分布式锁-->
            <dependency>
                <groupId>com.hkfs</groupId>
                <artifactId>hkfs-fundamental-lock</artifactId>
                <version>${hkfs.fundamental.version}</version>
            </dependency>
            <!--Web端json序列化及反序列化-->
            <dependency>
                <groupId>com.hkfs</groupId>
                <artifactId>hkfs-fundamental-jackson</artifactId>
                <version>${hkfs.fundamental.version}</version>
            </dependency>
            <!--全局会话管理-->
            <dependency>
                <groupId>com.hkfs</groupId>
                <artifactId>hkfs-fundamental-session</artifactId>
                <version>${hkfs.fundamental.version}</version>
            </dependency>
            <!--Dubbo框架-->
            <dependency>
                <groupId>com.hkfs</groupId>
                <artifactId>hkfs-fundamental-dubbo</artifactId>
                <version>${hkfs.fundamental.version}</version>
            </dependency>
            <!--日志切面-->
            <dependency>
                <groupId>com.hkfs</groupId>
                <artifactId>hkfs-fundamental-logger-aspect</artifactId>
                <version>${hkfs.fundamental.version}</version>
            </dependency>
            <!--代码生成工具-->
            <dependency>
                <groupId>com.hkfs</groupId>
                <artifactId>hkfs-fundamental-codegenerator</artifactId>
                <version>${hkfs.fundamental.version}</version>
            </dependency>

            <!--Jsoup网页解析-->
            <dependency>
                <groupId>com.hkfs</groupId>
                <artifactId>hkfs-fundamental-jsoup</artifactId>
                <version>${hkfs.fundamental.version}</version>
            </dependency>
            <!--Excel的poi处理-->
            <dependency>
                <groupId>com.hkfs</groupId>
                <artifactId>hkfs-fundamental-poi</artifactId>
                <version>${hkfs.fundamental.version}</version>
            </dependency>
            <!--Akka与Spring结合框架-->
            <dependency>
                <groupId>com.hkfs</groupId>
                <artifactId>hkfs-fundamental-akka</artifactId>
                <version>${hkfs.fundamental.version}</version>
            </dependency>
            <!--HttpClient-->
            <dependency>
                <groupId>com.hkfs</groupId>
                <artifactId>hkfs-fundamental-httpclient</artifactId>
                <version>${hkfs.fundamental.version}</version>
            </dependency>

        </dependencies>
    </dependencyManagement>
</project>